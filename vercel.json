{
  "version": 2,
  "builds": [
    {
      "src": "functions/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/functions/$1"
    },
    {
      "source": "/((?!api/.*).*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "functions/**/*.ts": {
      "runtime": "nodejs18.x"
    }
  }
}
{
  "name": "off-night-optimizer",
  "version": "1.0.0",
  "description": "Fantasy hockey off-night optimizer prototype",
  "private": true,
  "workspaces": [
    "server",
    "web"
  ],
  "scripts": {
    "warm:schedules": "tsx server/scripts/warmup-schedules.ts",
    "dev:server": "cross-env PORT=8080 tsx watch server/src/index.ts",
    "dev:web": "cd web && vite",
    "dev": "concurrently -k -n SERVER,WEB -c blue,magenta \"npm:dev:server\" \"npm:dev:web\"",
    "build": "npm run build:server && npm run build:client",
    "build:server": "cd server && npm run build",
    "build:client": "cd web && npm run build",
    "start": "cd server && npm start",
    "test": "npm run test:server && npm run test:client",
    "test:server": "cd server && npm test",
    "test:client": "cd web && npm test",
    "install:all": "npm install && cd server && npm install && cd ../web && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "tsx": "^4.7.0"
  },
  "dependencies": {
    "@types/react-router-dom": "^5.3.3",
    "date-fns": "^4.1.0",
    "react-router-dom": "^7.8.2"
  }
}
